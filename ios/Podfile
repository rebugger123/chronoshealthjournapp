# Ensure Xcode/Pods scripts (including Hermes) use a stable Node path.
ENV['NODE_BINARY'] = '/opt/homebrew/bin/node'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip
require_relative '../node_modules/react-native/scripts/react_native_pods'

platform :ios, '15.1'
prepare_react_native_project!

# use_frameworks! :linkage => :static  # Disabled for better RN compatibility

target 'ChronosApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :fabric_enabled => false,
    :new_arch_enabled => false
  )

  post_install do |installer|
    # Force all pods to use iOS 12.0+ (Xcode 16 simulators require it)
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
      end
    end
    react_native_post_install(
      installer,
      mac_catalyst_enabled: false
    )
  end
end
